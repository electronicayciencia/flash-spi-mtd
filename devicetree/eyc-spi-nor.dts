/dts-v1/;
/plugin/;	/* allow undefined references */

/ {
    compatible = "brcm,bcm2835";

    fragment@0 {
        target = <&spidev0>;

        __overlay__ {
            status = "disabled";
        };
    };

    fragment@1 {
        target = <&spi0>;

        __overlay__ {
            status = "okay";
            #address-cells = < 0x01 >;
            #size-cells = < 0x00 >;

            spi_nor@0 {
                compatible = "generic,m25p80-nonjedec";
                reg = < 0x00 >;
                spi-max-frequency = < 4000000 >;

                partitions {
                    compatible = "fixed-partitions";
                    #address-cells = <1>;
                    #size-cells = <1>;

                    partition@80000 {
                        label = "user";
                        reg = <0x80000 0x80000>;
                    };
                    partition@0 {
                        label = "conf";
                        reg = <0x00000 0x80000>;
                    };
                };
            };
        };
    };

};

